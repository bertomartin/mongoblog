.row
  .col-md-8.col-md-offset-2
    %h3= @article.title
    .content=@article.content

    %hr

    %h2 Comments

    %ul.list-unstyled
      -@article.comments.each do |comment|
        %li
          %blockquote.blockquote
            %p.m-b-0=comment.body
            %footer.blockquote-footer
              =comment.name
              /# %em=time_ago_in_words comment.id.generation_time
    %br/


    %h4 Add a comment

    = form_for ([@article, @article.comments.build]) do |f|
      = render 'shared/error_messages', target: @article
      .field
        = f.label :body, 'Comment'
        %br/
        = f.text_area :body
      .field
        = f.label :name, 'Your Name'
        %br/
        = f.text_field :name
      .actions
        = f.submit

    <br>
    <br>
    <br>
    %h4= "You can check out related articles"
    -@related_articles.each do |related_article|
      -if @article.title != related_article["title"]
        <br>
        =link_to related_article["title"], article_path(related_article["_slugs"])










