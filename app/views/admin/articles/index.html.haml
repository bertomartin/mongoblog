.row
  .col-md-12
    %h3 Articles
    %table.table.table-striped
      %thead
        %tr
          %th Title
          %th Content
          %th{:colspan => "2"}
      %tbody
        - @articles.each do |article|
          %tr
            %td=link_to article.title, admin_article_path(article)
            %td= article.content
            %td= link_to 'Edit', edit_admin_article_path(article)
            %td= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New Article', new_admin_article_path
