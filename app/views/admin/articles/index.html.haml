%p#alert= alert
%h1 Listing Articles
%table
  %thead
    %tr
      %th Title
      %th Content
      %th{:colspan => "3"}
    
%span
- @tag_list.each do |tag|
  =link_to tag + " ", url: tag
=link_to 'All', admin_articles_path
     
%p
%div 
  %h2 
.row
  .col-md-8.col-md-offset-2
    - @articles.each do |article|
      %h3=article.title

      .content=article.content
      .read-more=link_to 'read more', article
      %tr
        / %td= link_to 'Show', admin_article_path(article)
        %td= link_to 'Edit', edit_admin_article_path(article)
        %td= link_to 'Delete', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }         
      %hr

        
%br/
= link_to 'New Article', new_admin_article_path

