.row
  .col-md-12
    %h3 Pages
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Content
          %th{:colspan => "2"}
      %tbody
        - @pages.each do |page|
          %tr
            %td=link_to page.name, admin_page_path(page)
            %td= page.content
            %td= link_to 'Edit', edit_admin_page_path(page)
            %td= link_to 'Destroy', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New Page', new_admin_page_path